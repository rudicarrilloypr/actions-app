<style>
body, html {
    margin: 0;
}

.navbar {
    width: 100%;
}

.login-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%
}

.login-nav span, .navbar-brand, .login-btn {
    font-family: 'Proxima Nova', sans-serif;
    font-weight: bold;
    color: white;
}

.navbar-text {
    justify-content: center;
    margin: 0;
    margin-left: 70px;
    flex-grow: 1;
    text-align: center;
}

.login-btn {
    background: none;
    border: none;
    text-decoration: none;
}

a {
    text-decoration: none;
    color: lightgray;
    text-align: center;
    align-items: center;
    margin: 5px 10px;
    font-family: 'Proxima Nova', sans-serif;
}

.centered-links {
    position: fixed;
    bottom: 10px;
    left: 0;
    right: 0;
    width: 30px;
    margin-left: auto;
    margin-right: auto;
}

.centered-links a {
    pointer-events: auto;
}

.form-wrapper {
    margin-top: 20px;
}

.form-control {
    width: 100%;
    font-size: 16px;
    padding: 12px 20px;
    border: 1px solid lightgray;
}

.btn-primary {
    font-size: 16px;
    padding: 12px 20px;
}

.category-block {
    border: 1px solid lightgray;
    padding: 15px;
    margin: 10px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.category-block i {
    font-size: 24px;
    margin-bottom: 10px;
}

.category-details {
    display: flex;
    justify-content: space-between;
    width: 100%
}

.category-link {
    text-align: center;
    width: 100%;
    margin-top: 15px;
}

.horizontal-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px; 
    margin-top: 30px; 
    margin-bottom: 20px;
}



.main-logo {
    position: fixed;
    bottom: 10px;
    right: 160px;
    width: 70px;
}

.btn-primary {
    background-color: #5fb523;
    color: #fff;
    border: 2px solid white;
    border-radius: 5px;
    width: 100%;
    max-width: 200px;
    display: block;
    text-align: center;
    position: relative; 
    overflow: hidden;   
}

.btn-primary::before {
    content: "";
    position: absolute;
    top: 5px;
    bottom: 5px;
    left: 5px;
    right: 5px;
    border: 1px solid white; 
    pointer-events: none; 
}


.icon-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 5px;
    padding: 10px;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.icon-item:hover {
    background-color: #f2f2f2;
}

.form-control {
    width: 100%;
    font-size: 16px;
    padding: 12px 20px;
    border: none;
    border-radius: 0;
    box-shadow: none;
    background-color: #f3f3f3;
    box-sizing: border-box;
}

.form-group {
    margin-bottom: 20px;
}

.form-group.mt-4 {
    text-align: center;
    position: fixed;
    right: 160px;
}

/* Added styles */
.table {
    border-collapse: collapse;
    margin-top: 20px;
    width: 100%;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    font-family: 'Proxima Nova', sans-serif;
}

.table th, .table td {
    padding: 15px 20px;
}

.table thead {
    background-color: #f4f4f4;
    color: #lightgray;
}

.table tbody tr:hover {
    background-color: #f4f4f4;
}

h3.text-center {
    display: flex;
    justify-content: center;
    font-size: 24px;
    padding: 10px 0;
    background-color: #f7f7f7;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
    font-family: 'Proxima Nova', sans-serif;
}

</style>
<div class="container mt-5">
    <nav class="navbar navbar-expand-lg" style="background-color: #3778c2; padding: 20px 0">
        <div class="login-nav">
            <span class="navbar-text">
                Transactions: <%= @group.name %>
            </span>
            <% if user_signed_in? %>
                <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "login-btn" %>
            <% end %>
        </div>
    </nav>

    <h3 class="text-center mt-4">Total: $ <%= @total_amount %></h3>

    <div class="table-responsive mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% @entities.each do |entity| %>
                    <tr>
                        <td><%= entity.name %></td>
                        <td><%= entity.amount %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <!-- Botones despuÃ©s de la tabla -->
    <div class="horizontal-center">
        <%= link_to 'ADD NEW TRANSACTION', new_group_entity_path(@group), class: 'btn btn-primary' %>
        <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
    </div>
    
    <img src="<%= asset_path 'actions-logo-noback.PNG' %>" alt="Actions App Logo" class="main-logo">
</div>
