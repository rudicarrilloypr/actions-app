<style>
    body, html {
        margin: 0;
    }

    .navbar {
        width: 100%;
    }

    .login-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .login-nav span,
    .navbar-brand,
    .login-btn {
        font-family: 'Proxima Nova', sans-serif;
        font-weight: bold;
        color: white;
    }

    .navbar-brand {
        font-size: 24px;
        text-decoration: none;
    }

    .login-btn {
        background: none;
        border: none;
        text-decoration: none;
    }

    a {
        text-decoration: none;
        color: lightgray;
        text-align: center;
        align-items: center;
        margin: 5px 10px;
        font-family: 'Proxima Nova', sans-serif;
    }

    .centered-links {
      position: fixed;
      bottom: 10px;
      left: 0;
      right: 0;
      width: 70px;
      margin-left: auto;
      margin-right: auto;
  }
  
    .centered-links a {
        pointer-events: auto;
    }

    .form-wrapper {
        margin-top: 20px;
    }

    .form-control {
        width: 100%;
        font-size: 16px;
        padding: 12px 20px;
        border: 1px solid lightgray;
    }

    .btn-primary {
        font-size: 16px;
        padding: 12px 20px;
    }
</style>

<div class="container mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mt-4'}) do |f| %>
        <nav class="navbar navbar-expand-lg" style="background-color: #3778c2; padding: 20px 0">
            <div class="login-nav">
                <%= link_to '<', root_path, class: "navbar-brand" %>
                <span class="navbar-text">
                    SIGN UP
                </span>
                <%= f.submit "Next", class: "login-btn" %>
            </div>
        </nav>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-5">
            <div class="form-wrapper">

                <div class="form-group">
                    <%= f.text_field :name, class: 'form-control', placeholder: "Name", style: "color: lightgray;" %>
                </div>

                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email", style: "color: lightgray;" %>
                </div>

                <div class="form-group">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password", style: "color: lightgray;" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirm Password", style: "color: lightgray;" %>
                </div>

            </div>
        </div>

        <div class="centered-links">
            <%= render "devise/shared/links" %>
        </div>
    <% end %>
</div>