<h1>Add New Category</h1>

<%= form_for @group do |f| %>
  <% if @group.errors.any? %>
    <div>
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :icon, "Choose an icon" %>
    <ul>
      <% @available_icons.each do |icon| %>
        <li>
          <%= radio_button_tag 'group[icon]', icon, false, id: "icon_#{icon.gsub(' ', '_')}" %>
          <%= label_tag "icon_#{icon.gsub(' ', '_')}", "<i class='#{icon}'></i>".html_safe %>
        </li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= link_to '< Back', root_path %>
<% if user_signed_in? %>
<%= button_to "Log Out", destroy_user_session_path, method: :delete %>
<% end %>
